{
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "jsx": true,
    "templateStrings": true,
    "classes": true,
    "defaultParams": true,
    "generators": true,
    "modules": true,
    "restParams": true,
    "objectLiteralComputedProperties": true
  },
  "env": {
    "node": true,
    "jasmine": true
  },
  "rules": {
    "strict": 0,
    "consistent-return": 2,
    "curly": 1,
    "default-case": 2,
    "guard-for-in": 2,

    "no-alert": 2,
    "no-caller": 2,
    "no-cond-assign": 2,
    "no-constant-condition": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-else-return": 2,
    "no-empty": 2,
    "no-empty-character-class": 2,
    "no-eq-null": 2,
    "no-ex-assign": 2,
    "no-extend-native": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-semi": 1,
    "no-fallthrough": 2,
    "no-func-assign": 2,
    "no-invalid-regexp": 2,
    "no-invalid-this": 2,
    "no-irregular-whitespace": 1,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 1,
    "no-new-wrappers": 2,
    "no-new": 2,
    "no-octal": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-redeclare": 2,
    "no-regex-spaces": 2,
    "no-return-assign": 2,
    "no-self-compare": 2,
    "no-shadow": 2,
    "no-unreachable": 2,
    "no-unexpected-multiline": 2,
    "no-unused-expressions": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "no-use-before-define": [1, "nofunc"],
    "use-isnan": 2,
    "valid-typeof": 2,

    "array-bracket-spacing": [1, "never"],
    "max-len": [1, 100],
    "brace-style": [1, "stroustrup", { "allowSingleLine": true }],
    "comma-spacing": [1, {"before": false, "after": true}],
    "comma-style": [1, "last"],
    "computed-property-spacing": [1, "never"],
    "consistent-this": [1, "self"],
    "eol-last": 1,
    "new-cap": 0,
    "new-parens": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-nested-ternary": 1,
    "no-spaced-func": 1,
    "no-trailing-spaces": 1,
    "space-after-keywords": [1, "always"],
    "space-before-blocks": [1, "always"]
  }
}
