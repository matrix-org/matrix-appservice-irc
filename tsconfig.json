{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "composite": false,
    "strictNullChecks": true,
    /* We don't support this yet */
    "useUnknownInCatchVariables": false,
     /* matrix-js-sdk throws up errors */
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "spec/**/*",
    "scripts/**/*",
    "app.js"
  ]
}
